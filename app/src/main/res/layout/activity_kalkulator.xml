<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KompetensiActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_200">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orange_500"
                    android:paddingBottom="@dimen/_20sdp"
                    android:paddingTop="@dimen/_80sdp"
                    android:orientation="vertical">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orange_500"
                    android:paddingBottom="@dimen/_20sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:padding="@dimen/_4sdp"
                        android:textSize="@dimen/_23sdp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="KALKULATOR ENERGI"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_60sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardUseCompatPadding="true"
                        app:cardMaxElevation="@dimen/_4sdp"
                        app:cardElevation="@dimen/_3sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingRight="@dimen/_12sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_10sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingLeft="@dimen/_12sdp"
                                    android:paddingRight="@dimen/_12sdp"
                                    android:weightSum="2">
                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <androidx.appcompat.widget.AppCompatSpinner
                                            android:id="@+id/kiri"
                                            android:spinnerMode="dialog"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:dropDownHeight="@dimen/_90sdp"
                                            android:minHeight="@dimen/_40sdp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <androidx.appcompat.widget.AppCompatSpinner
                                            android:id="@+id/kanan"
                                            android:spinnerMode="dialog"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:dropDownWidth="@dimen/_90sdp"
                                            android:minHeight="@dimen/_40sdp"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/_12sdp"
                                android:paddingRight="@dimen/_12sdp"
                                android:weightSum="2">
                                <RelativeLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:layout_marginRight="@dimen/_3sdp"
                                            android:id="@+id/img_kiri"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_250sdp"
                                            android:background="@drawable/bg1"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_250sdp"
                                        android:orientation="vertical"
                                        android:gravity="center">
                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/val_kiri"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:minWidth="@dimen/_100sdp"
                                            android:textSize="@dimen/_35sdp"
                                            android:layout_gravity="center"
                                            android:textStyle="bold"
                                            android:maxLines="1"
                                            android:maxLength="4"
                                            android:textColor="@color/white"
                                            android:inputType="number"
                                            android:gravity="center" />
                                        <TextView
                                            android:id="@+id/des_kiri_1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:text="hari berkendara menggunakan mobil"
                                            android:textSize="@dimen/_11sdp"
                                            android:textColor="@color/white"/>
                                        <TextView
                                            android:id="@+id/des_kiri_2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:text="(sejauh 20 km / hari)"
                                            android:textSize="@dimen/_11sdp"
                                            android:textColor="@color/white"/>
                                    </LinearLayout>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:id="@+id/img_kanan"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_250sdp"
                                            android:background="@drawable/bg2"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_250sdp"
                                        android:orientation="vertical"
                                        android:gravity="center">
                                        <TextView
                                            android:id="@+id/val_kanan"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="50"
                                            android:maxLength="6"
                                            android:textStyle="bold"
                                            android:textSize="@dimen/_35sdp"
                                            android:textColor="@color/white"/>
                                        <TextView
                                            android:id="@+id/des_kanan_1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:text="hari berkendara menggunakan mobil"
                                            android:textSize="@dimen/_11sdp"
                                            android:textColor="@color/white"/>
                                        <TextView
                                            android:id="@+id/des_kanan_2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:text="(sejauh 20 km / hari)"
                                            android:textSize="@dimen/_11sdp"
                                            android:textColor="@color/white"/>
                                    </LinearLayout>
                                </RelativeLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/_40sdp"
                                    android:text="â‰ˆ"
                                    android:textSize="@dimen/_50sdp"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_12sdp"
                            android:layout_gravity="center"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/judul"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:text="Tahukah kamu?"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/black"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="6">
                                <LinearLayout
                                    android:layout_width="1sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/subjudul"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="untuk menggunakan alat tersebut diperlukan energi listrik sebesar "
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/black"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="2">
                                    <TextView
                                        android:id="@+id/val_kwh"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@color/green_500"
                                        android:padding="@dimen/_6sdp"
                                        android:text="2990"
                                        android:maxLength="4"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/white"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:paddingLeft="@dimen/_2sdp"
                                        android:gravity="left"
                                        android:text="KWh/tahun"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/black"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:padding="@dimen/_2sdp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="dan untuk menghasilkan energi sebesar itu, diperlukan sumber energi energi setara dengan"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/black"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_50sdp"
                                android:paddingRight="@dimen/_20sdp"
                                android:weightSum="6"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2">
                                    <TextView
                                        android:id="@+id/val_batubara"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:gravity="right"
                                        android:padding="@dimen/_4sdp"
                                        android:text="29993"
                                        android:maxLength="7"
                                        android:background="@color/red_A100"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/black"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:gravity="left"
                                        android:padding="@dimen/_4sdp"
                                        android:text="kg Batubara,"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/black"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_50sdp"
                                android:paddingRight="@dimen/_20sdp"
                                android:weightSum="6"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2">

                                    <TextView
                                        android:id="@+id/val_gas"
                                        android:layout_width="match_parent"
                                        android:layout_height="43dp"
                                        android:layout_gravity="right"
                                        android:background="@color/orange_100"
                                        android:gravity="right"
                                        android:padding="@dimen/_4sdp"
                                        android:text="29993"
                                        android:maxLength="7"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12sdp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:gravity="left"
                                        android:padding="@dimen/_4sdp"
                                        android:text="kaki kubik gas alam, atau"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/black"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_50sdp"
                                android:paddingRight="@dimen/_20sdp"
                                android:weightSum="6"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2">
                                    <TextView
                                        android:id="@+id/val_minyak"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:gravity="right"
                                        android:padding="@dimen/_4sdp"
                                        android:text="29993"
                                        android:maxLength="7"
                                        android:background="@color/yellow_100"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/black"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:gravity="left"
                                        android:padding="@dimen/_4sdp"
                                        android:text="barrel minyak bumi"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/black"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:padding="@dimen/_2sdp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="dan akan menghasilkan polusi atau emisi karbondioksida sebsar "
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/black"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_50sdp"
                                android:paddingRight="@dimen/_20sdp"
                                android:weightSum="6"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2">
                                    <TextView
                                        android:id="@+id/val_polusi"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:gravity="right"
                                        android:padding="@dimen/_4sdp"
                                        android:text="29993"
                                        android:maxLength="7"
                                        android:background="@color/green_100"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/black"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:gravity="left"
                                        android:padding="@dimen/_4sdp"
                                        android:textStyle="bold"
                                        android:text="kg CO2/tahun"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/black"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>